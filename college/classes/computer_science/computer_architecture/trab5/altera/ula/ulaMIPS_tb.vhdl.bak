library ieee;
use ieee.std_logic_1164.all;
use ieee.std_logic_signed.all;
use ieee.numeric_std.all;
use ieee.std_logic_arith.all;

 entity ulaMIPS_tb is
 end ulaMIPS_tb;

 architecture ulaMIPS_tb_arch of ulaMIPS_tb is
	component ulaMIPS is
		port (
			opcode : in std_logic_vector(2 downto 0);
			A, B : in std_logic_vector(31 downto 0);
			Z : out std_logic_vector(31 downto 0);
			zero, ovfl : out std_logic);
	end component;
 
	signal op : std_logic_vector(2 downto 0);
	signal inA,inB,outZ : std_logic_vector(31 downto 0);
	signal outZero, outOvfl : std_logic;
begin
	U1: ulaMIPS port map(op, inA, inB, outZ, outZero, outOvfl);
	
	process
	begin
		-- teste das operacoes aritmeticas
		inA <= X"00001111";
		inB <= X"00001111";
		op <= "000"; -- adicao
		wait for 100 ns;	
		op <= "001"; -- subtracao
		wait for 100 ns;	
		
		inA <= X"00002222";
		inB <= X"00001111";
		op <= "000"; -- adicao
		wait for 100 ns;	
		op <= "001"; -- subtracao
		wait for 100 ns;
		
		inA <= X"00001111";
		inB <= X"00002222";
		op <= "000"; -- adicao
		wait for 100 ns;	
		op <= "001"; -- subtracao
		wait for 100 ns;
		
		inA <= X"80001111";
		inB <= X"70001111";
		op <= "000"; -- adicao
		wait for 100 ns;	
		op <= "001"; -- subtracao
		wait for 100 ns;
		
		-- teste das operacoes logicas		
		op <= "010"; -- and
		wait for 100 ns;
		op <= "011"; -- or
		wait for 100 ns;
		op <= "100"; -- not
		wait for 100 ns;
		op <= "101"; -- xor
		wait for 100 ns;
		op <= "110"; -- bypass
		wait for 100 ns;
		op <= "111"; -- slt
		wait for 100 ns;
		wait;
	end process;
end ulaMIPS_tb_arch;




