CC = gcc
CFLAGS = -Wall
SRC = src/
INC = -I 'include/'
MAIN = projeto1mp.c
MAINT = projeto1mpteste.c
UNIT = unit.c 
UNITT = testeunit.c

all: projeto1mp teste

projeto1mp: 
	$(CC) $(CFLAGS) -c $(SRC)$(MAIN) $(SRC)$(MAINT) $(INC)
	$(CC) $(CFLAGS) projeto1mp.o projeto1mpteste.o -o projeto1mp

teste: 
	$(CC) $(CFLAGS) -c -lcunit $(SRC)$(MAIN) $(INC)
	$(CC) $(CFLAGS) -lcunit projeto1mp.o unit.o testeunit.o -o teste

depurar:
	$(CC) -g -lcunit $(SRC)$(MAIN)

clean:
	rm -f *.o
	rm teste



	
